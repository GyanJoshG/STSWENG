<body>
    <section id="product-list">
        <div class="table-container">
            <h2>Product List</h2>
            <table class="product-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Stock</th>
                        <th>Sold</th>
                        <th>Availability</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.stock}}</td>
                        <td>{{this.sold}}</td>
                        <td>{{#if this.isAvailable}}Yes{{else}}No{{/if}}</td>
                        <td>
                            <!-- Edit Button with data-* attributes -->
                            <button class="edit-btn" 
                                data-id="{{this._id}}"
                                data-name="{{this.name}}"
                                data-price="{{this.price}}"
                                data-stock="{{this.stock}}"
                                data-sold="{{this.sold}}"
                                data-isavailable="{{this.isAvailable}}"
                                data-type="{{this.type}}"
                                data-occasion="{{this.occasion}}"
                                data-imgsrc="{{this.imgSrc}}"
                                data-color="{{this.color}}">
                                Edit
                            </button>
                            <button class="delete-btn">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </section>

    <!-- Edit Product Modal -->
    <div id="product-Modal" class="modal" style="display:none;">
        <div class="modal-content">
            <h2>Edit Product</h2>
            <form id="editProductForm" onsubmit="submitForm(event)">
                <input type="hidden" id="productId" name="id">
                
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>

                <label for="price">Price:</label>
                <input type="number" id="price" name="price" required>

                <label for="stock">Stock:</label>
                <input type="number" id="stock" name="stock" required>

                <label for="sold">Sold:</label>
                <input type="number" id="sold" name="sold" required>

                <label for="isAvailable">Available:</label>
                <input type="checkbox" id="isAvailable" name="isAvailable">

                <label for="type">Type:</label>
                <input type="text" id="type" name="type" required>

                <label for="occasion">Occasion:</label>
                <input type="text" id="occasion" name="occasion" required>

                <label for="imgSrc">Image URL:</label>
                <input type="text" id="imgSrc" name="imgSrc" required>

                <label for="color">Color:</label>
                <input type="text" id="color" name="color" required>

                <button type="submit" id="save-btn">Save Changes</button>
            </form>
        </div>
    </div>
</body>
